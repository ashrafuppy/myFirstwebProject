pipeline {
    agent any
    
    
    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
                echo "$USERNAME"
                echo "$PASSWORD"
            }
        }
         stage('dev') {
            steps {
                echo 'dev environment'
                echo "$USERNAME"
                echo "$PASSWORD"
            }
         }
          stage('prod') {
              when {
                  branch 'master'
              }
              input {
  message 'Please approve the package'
  parameters {
    string 'UserID'
    password defaultValueAsSecret: <object of type hudson.util.Secret>, name: 'Password'
  }
}

            steps {
                echo 'prod environment'
                echo "$USERNAME"
                echo "$PASSWORD"
            }
          }
    }
}
